<h1><%= @room.title %></h1>

<p><%= @room.room_image %></p>

<ul>
  <li><%= link_to "Edit", edit_room_path(@room) %></li>
  <li><%= link_to "Destroy", room_path(@room), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Tasks</h2>
<% @room.tasks.each do |task| %>
 <ul>
    <%= task.body %>
  </ul>
<% end %>

<h2>Add a task:</h2>
<%= form_with model: [ @room, @room.tasks.build ] do |form| %>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
